.cv-asc: article.bio
    .columns.is-gapless
        .column
            h1.bio__name #{bio.fullName}
            p.bio__title #{bio.title}
        .column.has-text-right
            +cvsItemInfo(null, null, bio.location, null, 'bio__location')
            +cvsItemLinks([
                [bio.email, `mailto:${bio.email}`, 'bio__email'],
                [bio.phone, `mailto:${bio.phone}`, 'bio__phone'],
            ])

    if (bio.info && bio.info.length > 0)
        .content
            p #{bio.info}
