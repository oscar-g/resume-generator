mixin proj(p)
    article.proj
        header: .columns
            .column
                h2.proj__title #{p.title}
                h3.proj__comp #{p.company}
                if p.url
                    a(href=p.url) #{p.url}

            .column.has-text-right
                div: +monthYear(p.date)

        if p.info
            .proj__info.content
                p #{p.info}

        +listSectionOpt('proj__details', 'Project Details', p.details, 'detail-list')
        +listSectionOpt('proj__tech', 'Technologies Used', p.tech, 'tech-list')
